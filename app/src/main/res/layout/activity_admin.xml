<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beerza">

    <LinearLayout
        android:id="@+id/linearLayout13"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:background="#0011ff"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:shadowColor="#333333"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="ADMIN"
            android:textColor="@color/text"
            android:textSize="@dimen/h1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#70ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="สถานที่ท่องเที่ยว"
            android:id="@+id/travel"
            android:background="@drawable/button_shape1" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="สถานที่ท่องเที่ยวที่น่าสนใจ"
            android:id="@+id/travelhit"
            android:background="@drawable/button_shape6"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="สถานที่ท่องเที่ยวตามฤดูกาล"
            android:id="@+id/travelseason"
            android:background="@drawable/button_shape4"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="ข่าวสารการท่องเที่ยว"
            android:id="@+id/travelnews"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape7" />
    </LinearLayout>

</LinearLayout>