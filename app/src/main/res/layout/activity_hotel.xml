<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                android:background="#ffffff" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/hotela"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:id="@+id/hotelb" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:id="@+id/hotelc" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Description:"
                    android:textColor="@color/text"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold"
                    android:shadowColor="#333333"
                    android:shadowDx="3"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:background="#00a2ff" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:padding="20dp"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:background="#ffffff"
                    android:shadowColor="#FFFFFF"
                    android:shadowDx="3"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:layout_weight="7.21" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imageView19"
                        android:src="@drawable/zaprice" />

                    <TextView
                        android:id="@+id/pricehotel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imageView17"
                        android:src="@drawable/zaopen" />

                    <TextView
                        android:id="@+id/openhotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imageView18"
                        android:src="@drawable/zaadd" />

                    <TextView
                        android:id="@+id/addhotel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:layout_marginLeft="10dp"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imageView20"
                        android:src="@drawable/zatravel" />

                    <TextView
                        android:id="@+id/tavelhotel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>



            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayout17"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_centerHorizontal="true"
            android:background="#9d00ff"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="RESTAURANT"
                android:textColor="@color/text"
                android:textSize="@dimen/h1"
                android:shadowColor="#333333"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>