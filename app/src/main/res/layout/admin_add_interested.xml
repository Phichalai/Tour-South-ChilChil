<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout26"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:background="#0011ff"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:shadowColor="#333333"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="ADD"
            android:textColor="@color/text"
            android:textSize="@dimen/h1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout28"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#70ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ชื่อสถานที่ท่องเที่ยวที่น่าสนใจ"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/nameinterested" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="รูปภาพสถานที่ท่องเที่ยว"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/imagea" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="รูปภาพสถานที่ท่องเที่ยวB"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/imageb" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="รูปภาพสถานที่ท่องเที่ยวc"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/imagec" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="รายละเอียดสถานที่ท่องเที่ยว"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/descriptionss" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ละติจูด"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/latijuda" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ลองติจูด"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/longtijuda" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="เวลาเปิดปิด"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/open4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="เบอร์โทรศัพท์"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/call2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="อีเมล์"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/email3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ค่าเข้าสถานที่"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/price4" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:id="@+id/addinterested"
                android:layout_alignParentBottom="true"
                android:onClick="clickadd"
                android:background="@drawable/button_shape1"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>